<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.SplashActivity">

        <ImageView
            android:id="@+id/splash_logo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/wdgfarm_logo"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHeight_percent="0.15"
            app:layout_constraintWidth_percent="0.8"/>

        <TextView
            android:id="@+id/splash_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/app"
            android:textSize="50dp"
            android:textColor="@color/colorBlack"
            android:textFontWeight="700"
            app:layout_constraintTop_toBottomOf="@+id/splash_logo"
            app:layout_constraintLeft_toLeftOf="@+id/splash_logo"
            app:layout_constraintRight_toRightOf="@+id/splash_logo"/>

        <TextView
            android:id="@+id/splash_version_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="v1.0.0"
            android:textSize="30dp"
            android:textColor="@color/colorBlack"
            app:layout_constraintTop_toBottomOf="@+id/splash_name_text"
            app:layout_constraintLeft_toLeftOf="@+id/splash_logo"
            app:layout_constraintRight_toRightOf="@+id/splash_logo"/>

        <ImageView
            android:id="@+id/splash_farmer_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="50dp"
            android:background="@drawable/farmer_man_icon"
            app:layout_constraintTop_toBottomOf="@+id/splash_version_text"
            app:layout_constraintBottom_toTopOf="@+id/splash_cas_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            />

        <ImageView
            android:id="@+id/splash_cas_logo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/cas_logo"
            android:layout_marginBottom="70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHeight_percent="0.1"
            app:layout_constraintWidth_percent="0.25"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>